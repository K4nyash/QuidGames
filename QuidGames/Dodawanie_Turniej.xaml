<Window x:Class="QuidGames.Dodawanie_Turniej"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuidGames"
        mc:Ignorable="d"
        Title="Dodawanie_Turniej" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" Orientation="Vertical">
            <TextBox Width="200" Height="30" Margin="5" Name="Nazwa"></TextBox>
            <TextBox Width="200" Height="30" Margin="5" Name="Miejsce"></TextBox>
            <StackPanel HorizontalAlignment="Center" Margin="5" Orientation="Horizontal">
                <Button Height="30" Width="100" Margin="5" Click="Button_Click">Zapisz</Button>
                <Button Height="30" Width="100" Margin="5" Click="Button_Click_1">Anuluj</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
