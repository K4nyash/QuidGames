<Window x:Class="QuidGames.Dodawanie_Turniej"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuidGames"
        mc:Ignorable="d"
        Title="Dodawanie_Turniej" Height="550" Width="500" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Grid">
            <Setter Property="Background" Value="#F5F5F5"></Setter>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#E94A4A"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="FontSize" Value="20"></Setter>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
            <Setter Property="Height" Value="50"></Setter>
            <Setter Property="Width" Value="200"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF56666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="BorderBrush" Value="Gray"></Setter>
            <Setter Property="Width" Value="300"></Setter>
            <Setter Property="Height" Value="50"></Setter>
            <Setter Property="FontSize" Value="30"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <StackPanel>
            <Label FontSize="40" HorizontalAlignment="Center" Margin="0,50,0,0" FontWeight="Bold" Foreground="Gray">Dodaj turniej:</Label>
        </StackPanel>

        <StackPanel VerticalAlignment="Top" Orientation="Vertical" Margin="0,130,0,0">
            <StackPanel Margin="0,0,0,30">
                <Label Width="300" Padding="0" Content="Nazwa turnieju"/>
                <TextBox Name="Nazwa" TextChanged="Txt_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                    <TextBox.Effect>
                        <DropShadowEffect ShadowDepth="3" Direction="270" Color="Black" Opacity="0.4" BlurRadius="3"/>
                    </TextBox.Effect>
                    <Validation.ErrorTemplate>
                        <ControlTemplate>
                            <StackPanel>
                                <AdornedElementPlaceholder/>
                                <TextBlock Text="{Binding CurrentItem.ErrorContent}" Foreground="Red" Grid.Row="1" FontSize="12" MaxWidth="350" TextWrapping="Wrap"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Validation.ErrorTemplate>
                    <Binding Path="Nazwa" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <local:WalNazwaT/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </StackPanel>
                
            <StackPanel Margin="0,0,0,30">
                <Label Width="300" Padding="0" Content="Miejsce turnieju"/>
                <TextBox x:Name="Miejsce" TextChanged="Txt_TextChanged">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                    <TextBox.Effect>
                        <DropShadowEffect ShadowDepth="3" Direction="270" Color="Black" Opacity="0.4" BlurRadius="3"/>
                    </TextBox.Effect>
                    <Validation.ErrorTemplate>
                        <ControlTemplate>
                            <StackPanel>
                                <AdornedElementPlaceholder/>
                                <TextBlock Text="{Binding CurrentItem.ErrorContent}" Foreground="Red" Grid.Row="1" FontSize="12" MaxWidth="350" TextWrapping="Wrap"/>
                            </StackPanel>
                        </ControlTemplate>
                    </Validation.ErrorTemplate>
                    <Binding Path="Miejsce" UpdateSourceTrigger="PropertyChanged">
                        <Binding.ValidationRules>
                            <local:WalMiejsce/>
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox>
            </StackPanel>
            
            <StackPanel HorizontalAlignment="Center" Margin="5" Orientation="Vertical">
                <Button Margin="5" Click="Button_Click" x:Name="Zapisz" IsEnabled="False" Content="Zapisz">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3" Direction="270" Color="Black" Opacity="0.4" BlurRadius="3"/>
                    </Button.Effect>
                </Button>
                <Button Margin="5" Click="Button_Click_1" Content="Anuluj">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                    <Button.Effect>
                        <DropShadowEffect ShadowDepth="3" Direction="270" Color="Black" Opacity="0.4" BlurRadius="3"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
